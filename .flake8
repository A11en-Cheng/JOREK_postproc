[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    docs,
    build,
    dist,
    .tox,
    .venv,
    venv,
    *.egg-info
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
per-file-ignores =
    __init__.py: F401,F403
    tests/*: F401,F841

[flake8:local-plugin-pydocstyle]
match = .*\.py

[pycodestyle]
max-line-length = 100
